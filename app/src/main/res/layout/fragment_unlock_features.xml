<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bensquared.epicnamegenerator.unlockFeatures"
    android:background="@drawable/eagle">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:text="Donate at your leisure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upgradeButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_borders"
        android:textColor="@android:color/white"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginTop="17dp"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Why: No Reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plainFeatureIdentifier"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upgradeButton"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/textColor"/>

    <TextView
        android:text="Really, there is no reason to donate.  Honestly this is just an app that was created as a first design and to train abilities.  Getting used to Android Studio and API's was the purpose of this before more useful apps are created.  Any money though means we can spend more time in to making apps, even clicking on an ad would help."
        android:layout_height="278dp"
        android:id="@+id/featuresText"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:background="@drawable/textview_border_mainpage"
        android:paddingTop="15dp"
        android:paddingStart="30dp"
        android:paddingEnd="12dp"
        android:paddingBottom="22dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_below="@+id/plainFeatureIdentifier"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="vertical"
        android:maxLines="100"
        android:textColor="@color/textColor"
        />
</RelativeLayout>
